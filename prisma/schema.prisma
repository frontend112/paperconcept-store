// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email String
  hashedPassword String
  fullName    String
}

model Order {
  id String  @id @default(auto()) @map("_id") @db.ObjectId
  name String
  price Float
  slug String
  src String
  quantity Float
}
